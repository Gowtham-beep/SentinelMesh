generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

enum IncidentScope{
  REGION
  GLOBAL
}

enum IncidentStatus{
  OPEN
  RESOLVED
}



model User{
  id        String        @id @default(uuid()) @db.Uuid
  email     String        @unique
  name      String?
  password  String        

  createdAt DateTime      @default(now())
  updatedAt DateTime      @updatedAt

//Realations

monitors    Monitor[]

}

model Monitor{
  id        String        @id @default(uuid()) @db.Uuid
  name      String
  url       String
  method    String        @default("GET")
  intervalSeconds Int?
  lastCheckedAt  DateTime?
  isActive  Boolean       @default(true)
  userId    String        @db.Uuid
  createdAt DateTime      @default(now())
  updatedAt DateTime      @updatedAt

  //Realtions
  user      User          @relation(fields: [userId], references: [id])
  alerts    AlertConfig?
  checks    CheckResult[]
  incidens  Incident[]


  @@unique([id, userId])
}

model CheckResult{
  id          String        @id @default(uuid()) @db.Uuid
  monitorId   String        @db.Uuid
  region      String
  status      String
  statusCode  Int?
  latencyms   Int? 
  error       String?

  scheduledAt DateTime       @default(now())
  checkedAt   DateTime      @default(now())

  //Relations
  monitor     Monitor       @relation(fields: [monitorId], references: [id])

  @@unique([id, monitorId])
}

model AlertConfig{
  id          String        @id @default(uuid()) @db.Uuid
  monitorId   String        @db.Uuid @unique
  email       String
  webhookUrl  String?

  //Relations
  monitor     Monitor       @relation(fields: [monitorId], references: [id])


}

model Incident{
  id          String      @id @default(uuid())

  monitorId   String      @db.Uuid
  scope       IncidentScope
  region      String?
  status      IncidentStatus

  openedAt    DateTime     @default(now())
  closedAt    DateTime?

  monitor     Monitor     @relation(fields: [monitorId],references: [id])

  @@index([monitorId, status])
  @@index([monitorId, scope, region])
}